<%- include('../partials/asidenav.ejs')%>




<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products</h2>
            <p>here are products</p>
        </div>
        <div>
            <a type="button" class="btn btn-primary" href="/addproduct">add Products</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table id="reloadPart" class="table table-hover" style="border: 1px solid black ; padding: 8px;">
                           
                                <thead style="border: 1px solid black ; padding: 8px;">
                                    <tr >
                                        <th  style="border: 1px solid black ; padding: 8px;">No.</th>
                                        <th  style="border: 1px solid black ; padding: 8px;">Image</th>
                                        <th  style="border: 1px solid black ; padding: 8px;">Product Name</th>
                                        <th  style="border: 1px solid black ; padding: 8px;">Quantity</th>
                                        <th  style="border: 1px solid black ; padding: 8px;">Category</th>
                                        <th  style="border: 1px solid black ; padding: 8px;">Price</th>
                                        <!-- offer in future -->
                                        <th  style="border: 1px solid black ; padding: 8px;">Edit</th>
                                        <th  style="border: 1px solid black ; padding: 8px;">List/unList</th>
                                    </tr>
                                </thead>
                                <tbody >
                                    <% if(product.length > 0){%>
                                        <% UID=1 %>
                                        <% product.forEach (data=>{ %>
                              
                                        <tr>
                                            <td style="border: 1px solid black ; padding: 8px;"><%= UID++ %></td>
                                            <td style="border: 1px solid black ; padding: 8px;">  <img src="/uploads/<%= data.productimage[0] %>" width="90px" class="rounded-3 "/></td>
                                            <td  style="border: 1px solid black ; padding: 8px;"><%= data.productname %></td>
                                            <td style="border: 1px solid black ; padding: 8px;" ><%= data.productquadity %></ >
                                         <td style="border: 1px solid black ; padding: 8px;" ><%= data.categoryId %></ >
                                         <td style="border: 1px solid black ; padding: 8px;" ><%= data.productprice %></ >
                                            <td style="border: 1px solid black ; padding: 8px;" >
                                                <button class="btn btn-info"><a href="/editproductdetiles/<%= data._id %>" >Edit</a></button></td>
                                                <%if (data.isListed===true){ %>
                                            <td style="border: 1px solid black ; padding: 8px;" >
                                                <button class="btn btn-success"><a  href="/listProduct?id=<%= data._id %>"  >List</a></button>
                                            </td>
                                            <%}else{%>
                                                <td style="border: 1px solid black ; padding: 8px;" >
                                                    <button class="btn btn-danger"><a href="/listProduct?id=<%= data._id %>">UnList</a></button>
                                                </td>
                                                <% } %>
                                                <% })%>
                                                    <% }else{ %>
                                      <tr>
                                         <td colspan="3" class="text-center">
                                             <p class="mt-3">No users</p>
                                         </td>
                                       </tr>
                                <% } %>

                                        </tr>
                                
                                </tbody>
                           
                             
                          
                        </table>
                    </div>
                </div>
                <!-- .col// -->
            </div>
            <!-- .row // -->
        </div>
        <!-- card body .// -->
    </div>
    <!-- card .// -->
</section>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

>

