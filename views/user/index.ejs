                })
                .then((response) => {
                    if (response.ok) {
                       
                        window.location.href = '/viewcart';
                    } else {
                        window.location.href = '/viewcart';
                    }
                })
                .catch((err) => {
                    console.log(err);
                    
                });
            }





            function wishlstProductId(id) {
    console.log('=======================productId==========================', id)
    fetch('/user/wishlist', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ id: id })
    })
    .then(response => {
        if (response.ok) {
            return response.json(); // Parse response JSON if response is okay
        } else {
            throw new Error('Error adding product to wishlist');
        }
    })
    .then(data => {
        console.log('Response Data:', data); // Log the parsed data to the console
        if (data && data.message) {
            Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: data.message,
                    position: 'top-end',
                    timer: 900,
                    showConfirmButton: false
                });
        } else {
            throw new Error('Invalid response data');
        }
    })
    .catch(error => {
        Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: error.message,
                position: 'top-end',
                timer: 1000,
                showConfirmButton: false
            });
      
        console.error('Error:', error);
    });
}

