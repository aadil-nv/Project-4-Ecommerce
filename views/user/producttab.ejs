    <script>
        function addItemInCart(id) {
            console.log(id);
            fetch(`/producttab/${id}`, {
                method: "post",
                headers: { "Content-Type": "application/json" },
            })
            .then((response) => {
                if (response.ok) {
                    // If response is okay, redirect to the cart page
                    window.location.href = '/viewcart';
                } else {
                    window.location.href = '/viewcart';
                }
            })
            .catch((err) => {
                console.log(err);
                // If an error occurs, handle it accordingly (e.g., show an error message)
            });
        }


        function wishlstProductId(id) {
    console.log('=======================productId==========================', id)
    fetch('/user/wishlist', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ id: id })
    })
    .then(response => {
        if (response.ok) {
            return response.json(); // Parse response JSON if response is okay
        } else {
            throw new Error('Error adding product to wishlist');
        }
    })
    .then(data => {
        console.log('Response Data:', data); // Log the parsed data to the console
        if (data.message==='success') {
            Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: "product added in Wishlist",
                    position: 'top-end',
                    timer: 900,
                    showConfirmButton: false
                });
        } else {
            Swal.fire({
                    icon: 'warning',
                    title: 'Success!',
                    text: "Product Alredy in wishlist",
                    position: 'top-end',
                    timer: 900,
                    showConfirmButton: false
                });
        }
    })
    .catch(error => {
        Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: error.message,
                position: 'top-end',
                timer: 1000,
                showConfirmButton: false
            });
      
        console.error('Error:', error);
    });
}

